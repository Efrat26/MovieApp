<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/li_movie_height">

    <ImageView
        android:id="@+id/movie_photo"
        android:layout_width="90dp"
        android:layout_height="0dp"
        android:paddingTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/deadpool2" />

    <TextView
        android:id="@+id/movie_title"
        android:layout_width="0dp"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:textSize="@dimen/movie_title"
        android:textColor="@android:color/holo_red_light"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="@+id/movie_photo"
        app:layout_constraintStart_toEndOf="@+id/movie_photo"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingStart="1dp"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:gravity="start"
        tools:text="@string/Deadpool2" />

    <TextView
        android:id="@+id/movie_overview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/spacing_s"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="4"
        android:textAppearance="?attr/textAppearanceListItemSecondary"
        app:layout_constraintBottom_toBottomOf="@+id/movie_photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/movie_title"
        app:layout_constraintTop_toBottomOf="@id/movie_title"
        tools:text="@string/Deadpool2_overview"
        android:textColor="@android:color/black"
        android:textSize="@dimen/movie_overview"/>


</androidx.constraintlayout.widget.ConstraintLayout>
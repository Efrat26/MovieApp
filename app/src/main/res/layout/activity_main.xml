<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:orientation="vertical"
    android:layout_marginTop="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/movieLayout">
    <ImageView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@color/black"
        android:contentDescription="@string/avengers_background_image_description"
        android:src="@drawable/avengers_infinity_war_background"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <RelativeLayout
        style="@style/movieLayout"
        android:paddingTop="5dp">

        <ImageView
            android:id="@+id/avengers_image"
            android:layout_marginLeft="0px"
            android:adjustViewBounds="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/avengers_background_image_description"
            android:src="@drawable/avengers_infinity_war"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:text="@string/avengers_infinity_war_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:id="@+id/avengers_title"
            android:layout_toRightOf="@+id/avengers_image"
            style="@style/marginLeftFromPreviewImage"
            />


        <TextView
            android:text="@string/released"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:id="@+id/released"
            android:layout_toRightOf="@+id/avengers_image"
            android:layout_below="@+id/avengers_title"
            style="@style/marginLeftFromPreviewImage"
            />

        <TextView
            android:text="@string/avengers_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/released"
            android:layout_below="@+id/avengers_title"
            style="@style/marginLeftFromPreviewImage"
            />

            <Button
                android:id="@+id/avengers_trailer_button"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/movie_trailer"
                android:layout_below="@+id/released"
                android:layout_toRightOf="@+id/avengers_image"
                style="@style/marginLeftFromPreviewImage"
                android:onClick="linkToYoutube"
             />

    </RelativeLayout>

    <ScrollView

        style="@style/movieLayout"
        android:fillViewport="true">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <TextView
            android:text="@string/overview_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <TextView
            android:text="@string/avengers_infinity_war_overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            />
    </LinearLayout>
    </ScrollView>
</LinearLayout>